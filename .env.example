# .env.example
# 환경변수 설정 예시 파일
# 실제 사용시 .env로 복사하여 값 수정

# Flask 애플리케이션 설정
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=true

# API 서버 설정
API_HOST=0.0.0.0
API_PORT=5000

# 보안 설정
SECRET_KEY=your-secret-key-change-in-production
MAX_CONTENT_LENGTH=52428800
ALLOWED_ORIGINS=*

# 로깅 설정
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE=logs/app.log

# 분석 엔진 설정
MAX_CONFIG_SIZE=10485760
ANALYSIS_TIMEOUT=300
ENABLE_CACHE=false
MAX_WORKERS=4

# 데이터베이스 설정 (향후 확장용)
# DATABASE_URL=sqlite:///kisa_analyzer.db

